@{
    ViewData["Title"] = "URL Shortener";
}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />

<div class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-purple-100 flex items-center justify-center px-4">
    <div class="bg-white/80 backdrop-blur-md p-8 rounded-2xl shadow-xl w-full max-w-lg border border-gray-200">
        <h1 class="text-3xl font-extrabold text-center text-gray-800 mb-6">
            üîó URL Shortener
        </h1>

        @if (TempData["Error"] != null)
        {
            <div class="bg-red-100 text-red-700 p-3 rounded mb-4 border border-red-200">
                @TempData["Error"]
            </div>
        }

        @if (TempData["ShortUrl"] != null)
        {
            <div class="bg-green-100 text-green-800 p-3 rounded mb-4 border border-green-200">
                <p class="font-medium">Your shortened URL:</p>
                <a href="@TempData["ShortUrl"]" target="_blank" class="text-blue-700 underline break-words">
                    @TempData["ShortUrl"]
                </a>
            </div>
        }

        <form method="post" asp-action="Shorten" class="space-y-4">
            <div>
                <label for="originalUrl" class="block text-sm font-semibold text-gray-700 mb-1">Paste your long URL:</label>
                <input type="text" name="originalUrl" id="originalUrl" placeholder="https://example.com/..." class="w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-300 focus:outline-none" required />
            </div>

            <div>
                <label for="customCode" class="block text-sm font-semibold text-gray-700 mb-1">Custom short code (optional):</label>
                <input type="text" name="customCode" id="customCode" placeholder="e.g. my-link" class="w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-purple-300 focus:outline-none" />
            </div>
            <div>
    <label for="expiresAt" class="block text-sm font-semibold text-gray-700 mb-1">Fecha de expiraci√≥n (opcional):</label>
    <input type="date" name="expiresAt" id="expiresAt" class="w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-pink-300 focus:outline-none" />
</div>


            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition">
                Shorten URL
            </button>
        </form>

        <p class="text-xs text-center text-gray-500 mt-6">
            Created by <span class="font-semibold">Adri√°n Bailador Panero</span> with ‚ù§Ô∏è using ASP.NET + Tailwind
        </p>
    </div>
</div>
